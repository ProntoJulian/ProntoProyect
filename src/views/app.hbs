{{#if user}}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .card {
            margin: 20px;
            width: 18rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: scale(1.05);
        }
    </style>
</head>

<body>
    <h1 class="text-center my-4">Bienvenido, {{user.username}}</h1>
    <div class="container">
        <div class="card-container">
            <div class="card">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTDCLXY-wkyG0bXGtGHsn-oqawysXB_lSUjR_SKm862fw&s" class="card-img-top" alt="Companies">
                <div class="card-body">
                    <h5 class="card-title">Companies</h5>
                    <p class="card-text">Administra todas las compañías aquí.</p>
                    <a href="/app/companies" class="btn btn-primary">Ir a Companies</a>
                </div>
            </div>
            <div class="card">
                <img src="https://www.prontomowers.com/wp-content/uploads/2021/02/imagen_lawn_mower_sales.jpg" class="card-img-top" alt="Feeds">
                <div class="card-body">
                    <h5 class="card-title">Feeds</h5>
                    <p class="card-text">Administra todos los feeds aquí.</p>
                    <a href="/app/feeds" class="btn btn-primary">Ir a Feeds</a>
                </div>
            </div>
            <div class="card">
                <img src="https://www.prontomowers.com/wp-content/uploads/2021/02/Diseno-sin-titulo2.png" class="card-img-top" alt="Roles">
                <div class="card-body">
                    <h5 class="card-title">Roles</h5>
                    <p class="card-text">Administra todos los roles aquí.</p>
                    <a href="/app/roles" class="btn btn-primary">Ir a Roles</a>
                </div>
            </div>
            <div class="card">
                <img src="https://www.prontomowers.com/wp-content/uploads/2021/02/Diseno-sin-titulo.png" class="card-img-top" alt="Users">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Administra todos los usuarios aquí.</p>
                    <a href="/app/users" class="btn btn-primary">Ir a Users</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
{{/if}}
