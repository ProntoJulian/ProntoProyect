{{#if user}}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .card-icon {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 200px;
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, .125);
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .card {
            margin: 20px;
            width: 18rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: scale(1.05);
        }
    </style>
</head>

<body>
    <h1 class="text-center my-4">Welcome, {{user.username}}</h1>
    <div class="container">
        <div class="card-container">
            <div class="card">
                <div class="card-icon text-center py-4">
                    <i class="fas fa-building fa-5x"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Companies</h5>
                    <p class="card-text">Manage all companies here.</p>
                    <a href="/app/companies" class="btn btn-primary">Go to Companies</a>
                </div>
            </div>
            <div class="card">
                <div class="card-icon text-center py-4">
                    <i class="fas fa-rss fa-5x"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Feeds</h5>
                    <p class="card-text">Manage all feeds here.</p>
                    <a href="/app/feeds" class="btn btn-primary">Go to Feeds</a>
                </div>
            </div>
            <div class="card">
                <div class="card-icon text-center py-4">
                    <i class="fas fa-user-tag fa-5x"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Roles</h5>
                    <p class="card-text">Manage all roles here.</p>
                    <a href="/app/roles" class="btn btn-primary">Go to Roles</a>
                </div>
            </div>
            <div class="card">
                <div class="card-icon text-center py-4">
                    <i class="fas fa-users fa-5x"></i>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage all users here.</p>
                    <a href="/app/users" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
{{/if}}
