<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Nuevo Feed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .content {
            padding: 1rem;
        }

        .editable {
            display: none;
        }

        .editing .editable {
            display: inline;
        }

        .editing .non-editable {
            display: none;
        }

        .toggle-password {
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="content">
        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h2>Crear Nuevo Feed</h2>
                </div>
                <div class="card-body">
                    <form id="createFeedForm">
                        <div class="mb-3">
                            <label for="feed_name" class="form-label">Nombre del Feed</label>
                            <input type="text" class="form-control" id="feed_name">
                        </div>
                        <div class="mb-3">
                            <label for="store_hash" class="form-label">Store Hash</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="store_hash">
                                <span class="input-group-text toggle-password" data-toggle="store_hash">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="x_auth_token" class="form-label">x_auth_token</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="x_auth_token">
                                <span class="input-group-text toggle-password" data-toggle="x_auth_token">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="client_id" class="form-label">Client ID</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="client_id">
                                <span class="input-group-text toggle-password" data-toggle="client_id">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="client_secret" class="form-label">Client Secret</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="client_secret">
                                <span class="input-group-text toggle-password" data-toggle="client_secret">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="formulas" class="form-label">Formulas</label>
                            <input type="text" class="form-control" id="formulas">
                        </div>
                        <div class="mb-3">
                            <label for="active_products_gm" class="form-label">Productos Activos GM</label>
                            <input type="number" class="form-control" id="active_products_gm">
                        </div>
                        <div class="mb-3">
                            <label for="total_products_bc" class="form-label">Productos Totales BC</label>
                            <input type="number" class="form-control" id="total_products_bc">
                        </div>
                        <div class="mb-3">
                            <label for="preorder_products" class="form-label">Productos en Preorden</label>
                            <input type="number" class="form-control" id="preorder_products">
                        </div>
                        <div class="mb-3">
                            <label for="company_id" class="form-label">Compañía</label>
                            <select class="form-control" id="company_id">
                                {{#each companies}}
                                <option value="{{this.company_id}}">{{this.company_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="action-buttons">
                            <button type="button" class="btn btn-primary" id="createButton">Crear</button>
                            <button type="button" class="btn btn-secondary" id="cancelButton">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('createFeedForm');
            const createButton = document.getElementById('createButton');
            const cancelButton = document.getElementById('cancelButton');

            const togglePassword = (fieldId) => {
                const field = document.getElementById(fieldId);
                const type = field.type === 'password' ? 'text' : 'password';
                field.type = type;
            };

            document.querySelectorAll('.toggle-password').forEach(btn => {
                btn.addEventListener('click', function () {
                    const fieldId = btn.getAttribute('data-toggle');
                    togglePassword(fieldId);
                });
            });

            cancelButton.addEventListener('click', function () {
                window.location.href = "/app/feeds";
            });

            createButton.addEventListener('click', function () {
                const feedData = {
                    feed_name: document.getElementById('feed_name').value,
                    store_hash: document.getElementById('store_hash').value,
                    x_auth_token: document.getElementById('x_auth_token').value,
                    client_id: document.getElementById('client_id').value,
                    client_secret: document.getElementById('client_secret').value,
                    formulas: document.getElementById('formulas').value,
                    active_products_gm: document.getElementById('active_products_gm').value,
                    total_products_bc: document.getElementById('total_products_bc').value,
                    preorder_products: document.getElementById('preorder_products').value,
                    company_id: document.getElementById('company_id').value,
                };

                // Verificar que ningún campo esté vacío
                for (let key in feedData) {
                    if (feedData[key] === "") {
                        alert(`El campo ${key} no puede estar vacío`);
                        return;
                    }
                }

                fetch('/feeds/createFeed', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(feedData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.message === "Feed creado con éxito") {
                        alert("Feed creado con éxito");
                        window.location.href = "/app/feeds";
                    } else {
                        alert("Error al crear el feed: " + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("Error al crear el feed");
                });
            });
        });
    </script>
</body>

</html>
