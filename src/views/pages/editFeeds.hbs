<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actualizar Feed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h2>Información del Feed</h2>
            </div>
            <div class="card-body">
                <form id="feedForm">
                    <div class="mb-3">
                        <label for="feed_name" class="form-label">Nombre del Feed</label>
                        <input type="text" class="form-control" id="feed_name" value="{{feed_name}}">
                    </div>
                    <div class="mb-3">
                        <label for="store_hash" class="form-label">Store Hash</label>
                        <input type="text" class="form-control" id="store_hash" value="{{store_hash}}">
                    </div>
                    <div class="mb-3">
                        <label for="x_auth_token" class="form-label">x_auth_token</label>
                        <input type="text" class="form-control" id="x_auth_token" value="{{x_auth_token}}">
                    </div>
                    <div class="mb-3">
                        <label for="client_id" class="form-label">Client ID</label>
                        <input type="text" class="form-control" id="client_id" value="{{client_id}}">
                    </div>
                    <div class="mb-3">
                        <label for="client_secret" class="form-label">Client Secret</label>
                        <input type="text" class="form-control" id="client_secret" value="{{client_secret}}">
                    </div>
                    <div class="mb-3">
                        <label for="formulas" class="form-label">Formulas</label>
                        <input type="text" class="form-control" id="formulas" value="{{formulas}}">
                    </div>
                    <div class="mb-3">
                        <label for="last_update" class="form-label">Última Actualización</label>
                        <input type="text" class="form-control" id="last_update" value="{{last_update}}">
                    </div>
                    <div class="mb-3">
                        <label for="active_products_gm" class="form-label">Productos Activos GM</label>
                        <input type="number" class="form-control" id="active_products_gm" value="{{active_products_gm}}">
                    </div>
                    <div class="mb-3">
                        <label for="total_products_bc" class="form-label">Productos Totales BC</label>
                        <input type="number" class="form-control" id="total_products_bc" value="{{total_products_bc}}">
                    </div>
                    <div class="mb-3">
                        <label for="preorder_products" class="form-label">Productos en Preorden</label>
                        <input type="number" class="form-control" id="preorder_products" value="{{preorder_products}}">
                    </div>
                    <div class="mb-3">
                        <label for="company_id" class="form-label">ID de la Compañía</label>
                        <input type="number" class="form-control" id="company_id" value="{{company_id}}">
                    </div>
                    <div class="action-buttons">
                        <button type="button" class="btn btn-primary" id="updateButton">Actualizar</button>
                        <button type="button" class="btn btn-secondary" id="cancelButton">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const updateButton = document.getElementById('updateButton');

            updateButton.addEventListener('click', function () {
                const feedId = '{{feed_id}}'; // Asegúrate de que esta línea esté bien renderizada con el ID correcto
                console.log('Feed ID:', feedId); // Verifica que feedId se esté pasando correctamente
                const feedData = {
                    feed_name: document.getElementById('feed_name').value,
                    store_hash: document.getElementById('store_hash').value,
                    x_auth_token: document.getElementById('x_auth_token').value,
                    client_id: document.getElementById('client_id').value,
                    client_secret: document.getElementById('client_secret').value,
                    formulas: document.getElementById('formulas').value,
                    last_update: document.getElementById('last_update').value,
                    active_products_gm: document.getElementById('active_products_gm').value,
                    total_products_bc: document.getElementById('total_products_bc').value,
                    preorder_products: document.getElementById('preorder_products').value,
                    company_id: document.getElementById('company_id').value,
                };

                fetch(`/feeds/update/${feedId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(feedData)
                })
                .then(response => {
                    if (!response.ok) {
                        return response.json().then(err => { throw err; });
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.message === "Feed actualizado con éxito") {
                        alert("Feed actualizado con éxito");
                        window.location.href = "/app/feeds";
                    } else {
                        alert("Error al actualizar el feed: " + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("Error al actualizar el feed: " + JSON.stringify(error));
                });
            });

            document.getElementById('cancelButton').addEventListener('click', function () {
                window.location.href = "/app/feeds";
            });
        });
    </script>
</body>
</html>
