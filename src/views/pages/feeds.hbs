<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabla de Feeds</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .table td,
        .table th {
            padding: 0.75rem;
            white-space: nowrap;
        }

        .icon-btn {
            border: none;
            background: none;
            padding: 0;
            margin: 0 5px;
            cursor: pointer;
        }

        .icon-btn i {
            font-size: 1.2em;
            color: #007BFF;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table thead th {
            white-space: nowrap;
        }

        .highlight-row {
            background-color: #f8f9fa;
        }

        .editable {
            display: none;
        }

        .editing .editable {
            display: inline;
        }

        .editing .non-editable {
            display: none;
        }

        .action-buttons {
            margin-bottom: 15px;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="action-buttons">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createModal">
                <i class="fas fa-plus"></i> Crear
            </button>
        </div>
        <div class="card">
            <div class="card-header">
                <h2><i class="fas fa-rss table-icon"></i> Lista de Feeds</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th class="col-id"><i class="fas fa-id-badge table-icon"></i>ID</th>
                            <th class="col-name"><i class="fas fa-tag table-icon"></i>Nombre</th>
                            <th><i class="fas fa-cogs table-icon"></i>Formulas</th>
                            <th><i class="fas fa-clock table-icon"></i>Last Update</th>
                            <th><i class="fas fa-box-open table-icon"></i>Active Products GM</th>
                            <th><i class="fas fa-box table-icon"></i>Total Products BC</th>
                            <th><i class="fas fa-clipboard-list table-icon"></i>Preorder Products</th>
                            <th><i class="fas fa-building table-icon"></i>Company Id</th>
                            <th class="text-center"><i class="fas fa-tools table-icon"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each feeds}}
                        <tr>
                            <td><span class="non-editable">{{this.feed_id}}</span><span
                                    class="editable">{{this.feed_id}}</span></td>
                            <td><span class="non-editable">{{this.feed_name}}</span><input type="text"
                                    class="form-control editable" value="{{this.feed_name}}"></td>
                            <td><span class="non-editable">{{this.formulas}}</span><input type="text"
                                    class="form-control editable" value="{{this.formulas}}"></td>
                            <td><span class="non-editable">{{this.last_update}}</span><input type="text"
                                    class="form-control editable" value="{{this.last_update}}"></td>
                            <td><span class="non-editable">{{this.active_products_gm}}</span><input type="text"
                                    class="form-control editable" value="{{this.active_products_gm}}"></td>
                            <td><span class="non-editable">{{this.total_products_bc}}</span><input type="text"
                                    class="form-control editable" value="{{this.total_products_bc}}"></td>
                            <td><span class="non-editable">{{this.preorder_products}}</span><input type="text"
                                    class="form-control editable" value="{{this.preorder_products}}"></td>
                            <td><span class="non-editable">{{this.company_id}}</span><input type="text"
                                    class="form-control editable" value="{{this.company_id}}"></td>
                            <td class="text-center">
                                <button class="btn btn-primary btn-edit" title="Actualizar"
                                    data-feed-id="{{this.feed_id}}">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-danger btn-delete" title="Eliminar" data-feed-id="{{this.feed_id}}">
                                    <i class="fas fa-trash"></i>
                                </button>
                                <button class="btn btn-success btn-save editable" title="Guardar">
                                    <i class="fas fa-check"></i>
                                </button>
                                <button class="btn btn-secondary btn-cancel editable" title="Cancelar">
                                    <i class="fas fa-times"></i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalLabel">Confirmación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Seguro que quiere guardar los cambios?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="confirmSave">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación de Eliminación -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">Confirmación de Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Seguro que quiere eliminar el feed con ID <span id="deleteFeedId"></span>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para Crear Feed -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createModalLabel">Crear Nuevo Feed</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="createForm">
                        <div class="mb-3">
                            <label for="feed_name" class="form-label">Nombre del Feed</label>
                            <input type="text" class="form-control" id="feed_name">
                        </div>
                        <div class="mb-3">
                            <label for="store_hash" class="form-label">Store Hash</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="store_hash">
                                <span class="input-group-text toggle-password" data-toggle="store_hash">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="x_auth_token" class="form-label">x_auth_token</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="x_auth_token">
                                <span class="input-group-text toggle-password" data-toggle="x_auth_token">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="client_id" class="form-label">Client ID</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="client_id">
                                <span class="input-group-text toggle-password" data-toggle="client_id">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="client_secret" class="form-label">Client Secret</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="client_secret">
                                <span class="input-group-text toggle-password" data-toggle="client_secret">
                                    <i class="fas fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="formulas" class="form-label">Formulas</label>
                            <input type="text" class="form-control" id="formulas">
                        </div>
                        <div class="mb-3">
                            <label for="last_update" class="form-label">Última Actualización</label>
                            <input type="datetime-local" class="form-control" id="last_update">
                        </div>
                        <div class="mb-3">
                            <label for="active_products_gm" class="form-label">Productos Activos GM</label>
                            <input type="number" class="form-control" id="active_products_gm">
                        </div>
                        <div class="mb-3">
                            <label for="total_products_bc" class="form-label">Productos Totales BC</label>
                            <input type="number" class="form-control" id="total_products_bc">
                        </div>
                        <div class="mb-3">
                            <label for="preorder_products" class="form-label">Productos en Preorden</label>
                            <input type="number" class="form-control" id="preorder_products">
                        </div>
                        <div class="mb-3">
                            <label for="company_id" class="form-label">ID de la Compañía</label>
                            <select class="form-control" id="company_id">
                                {{#each companies}}
                                <option value="{{this.company_id}}">{{this.company_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="action-buttons">
                            <button type="button" class="btn btn-primary" id="createButton">Crear</button>
                            <button type="button" class="btn btn-secondary" id="cancelButton">Cancelar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Funcionalidad de editar
            document.querySelectorAll('.btn-edit').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var feedId = btn.getAttribute('data-feed-id');
                    window.location.href = `/feeds/updateFeed/${feedId}`;
                });
            });

            // Funcionalidad de cancelar edición
            document.querySelectorAll('.btn-cancel').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var row = btn.closest('tr');
                    row.classList.remove('editing');
                });
            });

            // Funcionalidad de guardar cambios
            document.querySelectorAll('.btn-save').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var row = btn.closest('tr');
                    var inputs = row.querySelectorAll('input');
                    var confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));

                    document.getElementById('confirmSave').onclick = function () {
                        inputs.forEach(function (input) {
                            var span = input.previousElementSibling;
                            span.innerText = input.value;
                        });
                        row.classList.remove('editing');
                        confirmModal.hide();
                    };

                    confirmModal.show();
                });
            });

            // Funcionalidad de eliminar
            document.querySelectorAll('.btn-delete').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var feedId = btn.getAttribute('data-feed-id');
                    var deleteFeedIdSpan = document.getElementById('deleteFeedId');
                    deleteFeedIdSpan.textContent = feedId;

                    var deleteConfirmModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                    deleteConfirmModal.show();

                    document.getElementById('confirmDelete').onclick = function () {
                        fetch(`/feeds/deleteFeed/${feedId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.message === "Feed eliminado con éxito") {
                                var row = btn.closest('tr');
                                row.remove();
                            } else {
                                alert("Error al eliminar el feed: " + data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert("Error al eliminar el feed");
                        });
                        deleteConfirmModal.hide();
                    };
                });
            });

            // Funcionalidad de crear nuevo feed
            document.getElementById('createButton').addEventListener('click', function () {
                const feedData = {
                    feed_name: document.getElementById('feed_name').value,
                    store_hash: document.getElementById('store_hash').value,
                    x_auth_token: document.getElementById('x_auth_token').value,
                    client_id: document.getElementById('client_id').value,
                    client_secret: document.getElementById('client_secret').value,
                    formulas: document.getElementById('formulas').value,
                    last_update: new Date().toISOString().replace('T', ' ').substring(0, 19),
                    active_products_gm: document.getElementById('active_products_gm').value,
                    total_products_bc: document.getElementById('total_products_bc').value,
                    preorder_products: document.getElementById('preorder_products').value,
                    company_id: document.getElementById('company_id').value,
                };

                // Verificar que ningún campo esté vacío
                for (let key in feedData) {
                    if (feedData[key] === "") {
                        alert(`El campo ${key} no puede estar vacío`);
                        return;
                    }
                }

                fetch('/feeds/createFeed', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(feedData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.message === "Feed creado con éxito") {
                        alert("Feed creado con éxito");
                        window.location.href = "/app/feeds";
                    } else {
                        alert("Error al crear el feed: " + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("Error al crear el feed");
                });
            });
        });
    </script>
</body>

</html>
